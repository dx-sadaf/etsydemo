

<div class="center">
    <div class="row listing">
      <% @listings.each do |listing| %>
      <div class="col-sm-6 col-md-4 ">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url(:medium)), listing_path(listing) %>
          <div class="caption">
            <h3><%= link_to listing.name, listing_path(listing)  %></h3>
            <p><%= listing.description %></p>
            <p><%= number_to_currency(listing.price) %></p>
            <p> <%= link_to t('.edit', :default => t("helpers.links.edit")),
                           edit_listing_path(listing), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          listing_path(listing),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </p>
          </div>
        </div>
      </div>
          <% end %>
    </div>
</div>

